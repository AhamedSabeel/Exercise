pipeline {
    agent any

    tools {
        nodejs 'node18'
    }

    stages {

        stage('Checkout') {
            steps {
                git branch: 'main', url: 'https://github.com/<your-username>/node-students-app.git'
            }
        }

        stage('Install Dependencies') {
            steps {
                sh 'npm install'
            }
        }

        stage('Run Tests') {
            steps {
                sh 'npm test'
            }
        }

        stage('Deploy to EC2') {
            steps {
                sh '''
                ssh ec2-user@<APP-EC2-IP> "
                  cd /home/ec2-user/node-students-app || exit 1
                  git pull origin main
                  npm install
                  pm2 restart all || pm2 start app.js
                "
                '''
            }
        }
    }

    post {
        failure {
            echo '❌ Build or tests failed. Deployment skipped.'
        }
        success {
            echo '✅ Deployment successful.'
        }
    }
}

